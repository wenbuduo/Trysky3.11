.body2{
  margin: 0px;
  padding: 0px;
  display:flex;
  justify-content: center;/*水平居中*/
  
}



.body2 image{
  position: absolute;
  width: 35px;
  height: 35px;
  top: 35%;
  left: 10%;
}

.body2 .text2{
  position: absolute;
  top:45%;
  font-size: 30px;
  font-weight: 100;
  color: rgb(0, 4, 255);
  overflow: hidden;
}

.ban1{
  position: absolute;
  display: flex;
  flex-direction:row;
  transform: translate(0%,-41px);
  animation-duration:5s;
	animation-name: BAN1;
  animation-timing-function: linear;
  animation-iteration-count:infinite;
}
.ban2{
  position: absolute;
  display: flex;
  flex-direction:row;
  transform: translate(-100%,-41px);
  animation-duration:5s;
	animation-name: BAN2;
  animation-timing-function: linear;
  animation-iteration-count:infinite;
}

.text2 .ban1 view{
  color: transparent;
  width: 25px;
  margin-left:25px;
  height: 100%;
  background-color: rgba(255, 0, 0, 0.3);
  transform:skewX(-30deg);
}
.text2 .ban2 view{
  color: transparent;
  width: 25px;
  margin-left:25px;
  height: 100%;
  background-color: rgba(255, 0, 0, 0.3);
  transform:skewX(-30deg);
}


@keyframes BAN1{
  100%{
    transform: translate(100%,-41px);
  }
}

@keyframes BAN2{
  100%{
    transform: translate(0%,-41px);
  }
}

