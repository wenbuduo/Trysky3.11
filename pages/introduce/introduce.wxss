page{
  background: linear-gradient(180deg,#CCFFFF,#6699CC);
  margin: 0px;
  padding: 0px;
  height: 100%;
  width: 100%;
  background-repeat: no-repeat;
  background-attachment:fixed;
}

.list1{
  position: relative;
  display: flex;
justify-content:center;
  flex-direction: column;
  align-items: center;
}

.list1 view navigator{
  position: relative;
  margin-top: 15px;
  margin-left: 10px;                                   /**框框的位置左右距离**/
  margin-right: 10px;

  padding: 10px;
  border-radius: 50px;


  border: 1px solid rgba(255, 255, 255,0.4);
  border-right: 1px solid rgba(255, 255, 255,0.2);
  border-bottom: 1px solid rgba(255, 255, 255,0.2);
  box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);

  transition: 0.9s;
  overflow: hidden;
}

.test1{
  color: rgb(209, 66, 61);
  font-weight: 100;
  font-size: 40px;
  font-family: 'KaiTi';
  text-align: center;
}

.icon{
  height: 30px;                                              /**小图标的大小设定**/
  width: 30px;                             
}

.buling{
  transform: translateY(-10px);
  transition: 0.3s;
}

.list1 view navigator::before{
  content: '';
  position: absolute;
  top:0;
  left: 0;
  width: 15px;
  height: 100%;
  background: rgba(255, 255, 255, 0.5);
  transform: skewX(45deg)translateX(85px);
  transition: 0.9s;
}

.list1 view navigator:hover::before{
  transform: skewX(45deg) translateX(-60px);
}

